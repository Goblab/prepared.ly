<h2>Additional info</h2>

<% form_for(@user) do |f| %>
<div>
<%= f.label :email %><br />
<%= f.email_field :email %>
</div>

<div>
<%= f.label :phone %><br />
<%= f.phone_field :phone %>
</div>

<div><%= f.label 'Notify by SMS' %><br />
<%= f.check_box :preferred_contact %>
</div>

<div><%= f.submit "Let's go!" %></div>

<% end %>