<!DOCTYPE html>
<html>
<head>

  <title>Preparedly</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>

  <!-- TODO: Move in controller specific stylesheet -->
  <link rel="stylesheet" href="http://code.leafletjs.com/leaflet-0.3.1/leaflet.css">
  <link rel="stylesheet" href="http://code.leafletjs.com/leaflet-0.3.1/leaflet.ie.css">
  <style>
    #map {
      height: 480px;
      width: 640px;
    }
  </style>
  <%= yield :stylesheet_yield %>
  <%= csrf_meta_tags %>

</head>
<body>
<div id="wrap">
	<div id="main-wrap">
		<div id="beta">
		</div>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
			<div class="nav-bar">
				<ul class="nav-bar-items">
  					<%= render 'devise/menu/registration_items' %>
  					<%= render 'devise/menu/login_items' %>
					<li><%= link_to "About", page_path("about") %>
					</li>
				</ul>
			</div>
			<a href="https://www.prepared.ly/">
				<div id="logo" title="preparedly">
				</div>
			</a>
			<div id="main">
				<%= yield %>
			</div>
	</div>
</div>
<div id="footer">
	<div id="footer-green">
	</div>
	<div id="footer-bottom">
	</div>
	
</div>
<script type="text/javascript" src="http://use.typekit.com/osj8jgk.js"></script>
<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
<%= yield :javascript_yield %>
<%= javascript_include_tag "application" %>
		


</body>
</html>
