<!-- //////////////////// comment modal //////////////// -->
<div id="comment" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Add some knowledge:</h3>
  </div>
  <div class="modal-body">
            <%= form_for([@random, @random.comments.build], :id => 'new_comment') do |f| %>
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name, :id => 'new_comment_name' %>
            </div>  
            <div class="field">
              <%= f.label :type %>
            <!--not doing anything for now -->
            <!--  <select class="span3">
                <option>wisdom to add</option>
                <option>supplementary task</option>
                <option>feedback about how it went</option>
                <option>submit a helpful product</option>
                <option>submit a photo</option>
                </select> -->
            </div>
            <div class="field">
              <%= f.label :body %>
              <%= f.text_area :body, :id => 'new_comment_body' %>
            </div>
            <div class="actions modal-footer">
              <%= f.submit %>
                  <a href="#" class="btn" data-dismiss="modal" >Close</a>
            <% end %>
            </div>  
  </div>
</div>

