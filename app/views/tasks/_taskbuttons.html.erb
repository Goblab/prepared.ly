<div class="task-butt">
  <div class="btn-group">
    <% if user_signed_in? %>
        <a class="btn-large btn-info btn" data-toggle="modal" href="#schedule"><i class="icon-calendar icon-white"></i> Schedule</a>
    <% else %>
        <a href="users/sign_up"><button class="btn-large btn-info btn"><i class="icon-user icon-white"></i> Sign up to track my progress, set reminders, and create tasks!</button></a>
    <% end %> 
        <%= link_to '<i class="icon-time icon-white"></i> Skip for now'.html_safe, tasks_path, :class => 'btn-large btn-warning btn', :id => 'skip' %>
        <%= link_to '<i class="icon-ok icon-white"></i> I did it!' .html_safe, "#done", :class => 'btn-large btn-success btn', :data => {:toggle => "modal"}%>
    </div>       
<!-- //////////////////// schedule modal //////////////// -->
<div id="schedule" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Schedule a reminder</h3>
  </div>
  <div class="modal-body">
    <%= form_tag(reminder_path(@random.id), :action => :post) do%>  
      <%= text_field_tag(:date, "Click to pick a reminder date", {:id => "pick_date", :dateFormat => "yy-mm-dd"}) %>
      <label>Text</label><%= check_box_tag 'text' %>
      <br />
      <label>Email</label><%= check_box_tag 'email' %>
      <br />
      <%= submit_tag 'Set my reminder!', :class => 'btn-large btn-success btn' %>
    <% end %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>
<!-- //////////////////// done modal //////////////// -->
<div id="done" class="modal hide fade">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h3>You did it!</h3>
            </div>
            <div class="modal-body">
              <p> One small step for your house, one giant step for neighborhoodkind. . .    </p> 
              <p> How'd it go? <a href "">skip this</a></p>
              <ul>
                <li> good</li>
                <li> ok </li>
                <li> terrible </li>
              </ul>
              <label>Any thing more to add?  </label>
              <input>
            </div>
            <div class="modal-footer">        
    <!-- //////////////////// share //////////////// -->
                <div class="btn-group pull-right">
                    <a class="btn-success btn dropdown-toggle" data-toggle="dropdown" href="#">
                      <i class="icon-share icon-white"></i> Share
                      <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <!-- dropdown menu links -->
                      <li>Facebook</li>
                      <li>Twitter </li>
                      <li>Email</li>
                    </ul>
                </div>    
              <%= link_to '<i class="icon-ok icon-white"></i> Give me another!'.html_safe, { :controller => 'completed_tasks', :action => 'completed' }, :class => 'btn-success btn' -%> 
              <%= link_to '<i class="icon-pencil icon-white"></i> Create a new task'.html_safe, new_task_path, :class => 'btn-info btn' %>
              <a href="#" class="btn" data-dismiss="modal" >Close</a>
            </div>
</div>
